{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./lib",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "types"]
}
